<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglight"
    tools:context=".Attendance">


    <Button
        android:id="@+id/btn_week1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/green"
        android:text="Week 1"
        app:layout_constraintBottom_toTopOf="@+id/btn_week3"
        app:layout_constraintEnd_toStartOf="@+id/btn_week2"
        app:layout_constraintHorizontal_bias="0.614"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayAttendance"
        app:layout_constraintVertical_bias="0.936" />

    <Button
        android:id="@+id/btn_week2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="8dp"
        android:background="@color/green"
        android:text="Week 2"
        app:layout_constraintBottom_toTopOf="@+id/btn_week4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayAttendance"
        app:layout_constraintVertical_bias="0.936" />

    <Button
        android:id="@+id/btn_week3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:background="@color/green"
        android:text="Week 3"
        app:layout_constraintBottom_toTopOf="@+id/btn_week5"
        app:layout_constraintEnd_toStartOf="@+id/btn_week4"
        app:layout_constraintHorizontal_bias="0.614"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_week4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="12dp"
        android:background="@color/green"
        android:text="Week 4"
        app:layout_constraintBottom_toTopOf="@+id/btn_week6"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_week8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="12dp"
        android:text="Week 8"
        app:layout_constraintBottom_toTopOf="@+id/btn_week10"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_week5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:text="Week 5"
        app:layout_constraintBottom_toTopOf="@+id/btn_week7"
        app:layout_constraintEnd_toStartOf="@+id/btn_week6"
        app:layout_constraintHorizontal_bias="0.614"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_week6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="12dp"
        android:text="Week 6"
        app:layout_constraintBottom_toTopOf="@+id/btn_week8"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_week9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="200dp"
        android:text="Week 9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_week10"
        app:layout_constraintHorizontal_bias="0.614"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_week7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:text="Week 7"
        app:layout_constraintBottom_toTopOf="@+id/btn_week9"
        app:layout_constraintEnd_toStartOf="@+id/btn_week8"
        app:layout_constraintHorizontal_bias="0.614"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_week10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="200dp"
        android:text="Week 10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/displayAttendance"
        android:layout_width="262dp"
        android:layout_height="76dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>